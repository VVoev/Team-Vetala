<div class="container login">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-body">
                <form method="POST" action="#" role="form">
                    <div class="form-group">
                        <h2>Loggin into account</h2>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="signupUser">Username</label>
                        <input id="signupUser" type="email" maxlength="50" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="signupPassword">Password</label>
                        <input id="signupPassword" type="password" maxlength="25" class="form-control" placeholder="at least 6 characters" length="40">
                    </div>
                    <div class="form-group">
                        <button id="signupSubmit" type="submit" class="btn btn-info btn-block">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
