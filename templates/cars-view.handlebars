<div>
    <label for="sortOrder">Sort Order: </label>
    <select name="sortOrder" id="sortOrder">
        <option value="_kmd" selected="selected">Date Added</option>
        <option value="make">Make</option>
        <option value="price">Price</option>
        <option value="firstRegistration">Year</option>
    </select>
    <label for="itemsPerPage">Items per page: </label>
    <select name="itemsPerPage" id="itemsPerPage">
        <option value="5">5</option>
        <option value="10" selected="selected">10</option>
    </select>
</div>

<h1>Our vehicles</h1>
{{#this}}
    {{#this}}
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    {{#if imageUrl}}
                        <img src={{imageUrl}} alt="...">
                    {{/if}}




                    <div class="caption">
                        <h3>{{make}} {{model}}</h3>
                        <p>EUR {{price}}</p>
                        {{#if info}}
                            <div>
                                <a id="additionalInfo">Double click here for more info</a>
                                <div id="hiddenInfo {{model}}" style="display: none">{{info}}</div>
                            </div>
                        {{/if}}
                        {{#if currentUser}}
                            <div id="operationEdit">
                                <td>Edit<p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                            </div>
                            <div id="operationDelete">
                                <td>Delete<p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                            </div>
                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
    {{/this}}
{{/this}}

<div id="pageNumbers"></div>