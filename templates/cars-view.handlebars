<h1>Our vehicles</h1>
{{#this}}
    {{#this}}
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    {{#if imageUrl}}
                        <img src="{{imageUrl}}" alt="...">
                    {{/if}}




                    <div class="caption">
                        <h3>{{make}} {{model}}</h3>
                        <p>EUR {{price}}</p>
                        {{#if info}}
                            <div>
                                <a id="additionalInfo">Double click here for more info</a>
                                <div id="hiddenInfo {{model}}" style="display: none">{{info}}</div>
                            </div>
                        {{/if}}
                        {{#if currentUser}}
                            <div>
                                <a href="#/Edit/?id={{_id}}" class="editLink">
                                    <td>Edit
                                        <p data-placement="top" data-toggle="tooltip" title="Edit">
                                            <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal"
                                                    data-target="#edit">
                                                    <span class="glyphicon glyphicon-pencil editLink"> </span>
                                            </button>
                                        </p>
                                    </td>
                                </a>
                            </div>
                            <div>
                                <a href="#/Delete/?id={{_id}}" class="deleteLink">
                                    <td>Delete
                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                            <button class="btn btn-danger btn-xs" data-title="Delete"
                                                    data-toggle="modal"
                                                    data-target="#delete">
                                                <span class="glyphicon glyphicon-trash deleteLink"></span>
                                            </button>
                                        </p>
                                    </td>
                                </a>
                            </div>
                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
    {{/this}}
{{/this}}
