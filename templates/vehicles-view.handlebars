<h1>Our vehicles</h1>
<div id="sortOptions">
        <label for="sortOrder">Sort Order: </label>
        <select name="sortOrder" id="sortOrder">
            <option value="_kmd" selected="selected">Date Added</option>
            <option value="_make">Make</option>
            <option value="_model">Price</option>
            <option value="_firstRegistration">Year</option>
        </select>
        <label for="itemsPerPage">Items per page: </label>
        <select name="itemsPerPage" id="itemsPerPage">
            <option value="5">5</option>
            <option value="10" selected="selected">10</option>
            <option value="20">20</option>
        </select>
        <label for="pageNumber">Page Number: </label>
        <select name="pageNumber" id="pageNumber">
            <option class="pageNumber" value="1" selected="selected">1</option>
        </select>
    </div>
{{#this}}
    {{#this}}
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">

                    {{#if _imageUrl}}
                        <img src="{{_imageUrl}}" alt="...">
                    {{else}}
                        <img src="../images/noimage.jpg" alt="...">
                    {{/if}}
                    <div id="{{_id}}" class="caption">
                        <h3>{{_make}} {{_model}}</h3>
                        <p>EUR {{_price}}</p>

                        {{#if currentUser}}
                            <div>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="editLink btn btn-warning btn-xs" data-title="Edit" data-toggle="modal"
                                            data-target="#edit">
                                        <span class="glyphicon glyphicon-pencil editLink"> </span>
                                        Edit
                                    </button>
                                </p>
                            </div>
                            <div>                                
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <button class="deleteLink btn btn-danger btn-xs" data-title="Delete"
                                            data-toggle="modal"
                                            data-target="#delete">
                                        <span class="glyphicon glyphicon-trash deleteLink"></span>
                                        Delete
                                    </button>
                                </p>                                   
                            </div>
                        {{/if}}
                        <div>
                            <p data-placement="top" data-toggle="tooltip" title="vehicleDetails">
                                <button class="vehicleDetails btn-info btn-xs"><span class="glyphicon glyphicon-play-circle"></span> Vehicle Details</button>
                            </p>
                        </div>
                        <div>
                            <p data-placement="top" data-toggle="tooltip" title="wishList">
                                <button class="btn btn-primary btn-xs" id="add-to-wish-list"><span class="wishList">+ Add to Wish List</span></button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/this}}
{{/this}}
