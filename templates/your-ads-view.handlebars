<h1>Your Cars</h1>
{{#this}}
    {{#this}}
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">

                    {{#if _imageUrl}}
                        <img src="{{_imageUrl}}" alt="...">
                    {{else}}
                        <img src="../images/noimage.jpg" alt="...">
                    {{/if}}
                    <div id="{{_id}}" class="caption">
                        <h3>{{_make}} {{_model}}</h3>
                        <p>EUR {{_price}}</p>                       
                            <div>
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="editLink btn btn-warning btn-xs" data-title="Edit" data-toggle="modal"
                                            data-target="#edit">
                                        <span class="glyphicon glyphicon-pencil editLink"> </span>
                                        Edit
                                    </button>
                                </p>
                            </div>
                            <div>                                
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <button class="deleteLink btn btn-danger btn-xs" data-title="Delete"
                                            data-toggle="modal"
                                            data-target="#delete">
                                        <span class="glyphicon glyphicon-trash deleteLink"></span>
                                        Delete
                                    </button>
                                </p>                                   
                            </div>
                        
                        <div>
                            <p data-placement="top" data-toggle="tooltip" title="vehicleDetails">
                                <button class="vehicleDetails btn-info btn-xs"><span class="glyphicon glyphicon-play-circle"></span> Vehicle Details</button>
                            </p>
                        </div>
                        <div>
                            <p data-placement="top" data-toggle="tooltip" title="wishList">
                                <button class="btn btn-primary btn-xs" id="add-to-wish-list"><span class="wishList">+ Add to Wish List</span></button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/this}}
{{/this}}
