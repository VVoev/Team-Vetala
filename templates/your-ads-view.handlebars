<h1>Your Cars</h1>
{{#this}}
    {{#this}}
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">

                    {{#if _imageUrl}}
                        <img src="{{_imageUrl}}" alt="...">
                    {{else}}
                        <img src="../images/noimage.jpg" alt="...">
                    {{/if}}
                    <div id="{{_id}}" class="caption">
                        <h3>{{_make}} {{_model}}</h3>
                        <p>EUR {{_price}}</p>

                        {{#if currentUser}}
                            <div>
                                <a class="editLink">
                                    <td>Edit
                                        <p data-placement="top" data-toggle="tooltip" title="Edit">
                                            <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal"
                                                    data-target="#edit">
                                                <span class="glyphicon glyphicon-pencil editLink"> </span>
                                            </button>
                                        </p>
                                    </td>
                                </a>
                            </div>
                            <div>
                                <a  class="deleteLink">
                                    <td>Delete
                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                            <button class="btn btn-danger btn-xs" data-title="Delete"
                                                    data-toggle="modal"
                                                    data-target="#delete">
                                                <span class="glyphicon glyphicon-trash deleteLink"></span>
                                            </button>
                                        </p>
                                    </td>
                                </a>
                            </div>
                        {{/if}}

                        <div>
                            <a  class="vehicleDetails" >Vehicle Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/this}}
{{/this}}
